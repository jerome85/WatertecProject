{% trans_default_domain 'admin' %}
{% extends '::layout/layoutAdmin.html.twig' %}

{% block products %}current{% endblock %}

{% block title %}{{ 'products.show.pageTitle'|trans }}{% endblock title %}

{% block body -%}
    <section id="content">

        <div class="content-wrap">
            <div class="container clearfix">

                <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 700px;">

                    <h1>{{ 'products.show.pageTitle'|trans }}</h1>

                    <table class="records_properties table table-striped">
                        <tbody>
                            <tr>
                                <th>{{ 'products.index.sku'|trans }}</th>
                                <td>{{ product.sku }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'products.new.name'|trans }}</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'products.new.description'|trans }}</th>
                                <td>{{ product.description|raw }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'products.new.price'|trans }}</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'products.new.available'|trans }}</th>
                                <td>{{ product.available }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="col_half nobottommargin">
                        <a href="{{ path('adminProducts_index') }}">
                            {{ 'products.backList'|trans }}
                        </a>
                    </div>
                    <div class="col_last nobottommargin">
                        <a href="{{ path('adminProducts_edit', { 'id': product.id }) }}">
                            {{ 'products.show.edit'|trans }}
                        </a>
                    </div>

                    {{ form(delete_form) }}

                </div>
            </div>         
        </div>

    </section>
{% endblock %}
