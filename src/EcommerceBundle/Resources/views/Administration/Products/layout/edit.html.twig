{% trans_default_domain 'admin' %}
{% extends '::layout/layoutAdmin.html.twig' %}

{% block products %}current{% endblock %}

{% block title %}{{ 'products.edit.pageTitle'|trans }}{% endblock title %}

{% block body -%}
    <!-- Content 
    ============================================= -->
    <section id="content">

        <div class="content-wrap">
            <div class="container clearfix">

                <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 700px;">
                    <h1>{{ 'products.edit.pageTitle'|trans }}</h1>
                    {% form_theme edit_form 'form/fields.html.twig' %}
                    {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <input type="submit" value="{{ 'products.edit.update'|trans }}" />
                    {{ form_end(edit_form) }}
                    
                    {{ form_start(delete_form) }}
                        <input type="submit" value="{{ 'products.edit.delete'|trans }}">
                    {{ form_end(delete_form) }}
                    
                    <a href="{{ path('adminProducts_index') }}">
                        {{ 'products.backList'|trans }}
                    </a>     
                </div>
            </div>         
        </div>
                    

    </section>
{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
{% endblock script %}