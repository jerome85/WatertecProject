{% trans_default_domain 'admin' %}
{% extends '::layout/layoutAdmin.html.twig' %}

{% block media %}current{% endblock %}

{% block title %}{{ 'media.edit.pageTitle'|trans }}{% endblock title %}
{% block css %}<link rel="stylesheet" href="{{ asset('css/components/bs-filestyle.css') }}" type="text/css" />{% endblock css %}


{% block body -%}
    <!-- Content 
    ============================================= -->
    <section id="content">


        <div class="content-wrap">
            <div class="container clearfix">
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }}">
                                <i class="icon-{{ type }}-sign"></i>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 700px;">
                    <h1>{{ 'media.edit.pageTitle'|trans }}</h1>
                    {% form_theme edit_form 'form/fields.html.twig' %}
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="{{ 'media.edit.update'|trans }}" />
                    {{ form_end(edit_form) }}

                    {{ form_start(delete_form) }}
                    <input type="submit" value="{{ 'media.edit.delete'|trans }}">
                    {{ form_end(delete_form) }}

                    <a href="{{ path('adminMedia_index') }}">
                        {{ 'media.backList'|trans }}
                    </a>     
                </div>
            </div>         
        </div>


    </section>
{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('js/components/bs-filestyle.js') }}"></script>
    <script  type="text/javascript">
        $(document).on('ready', function () {
 
            $("#ecommercebundle_media_file").fileinput({
                browseLabel: "{{ 'media.pickImage'|trans }}",
                showUpload: false,
                removeLabel: "{{ 'media.cancel'|trans }}"
            });

        });

    </script>
{% endblock script %}